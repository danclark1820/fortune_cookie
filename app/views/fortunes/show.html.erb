  <%= simple_form_for [@fortune, @note] do |f| %>
    <%= f.input :body, required: :true %>
    <% if user_signed_in? %>
      <%= f.hidden_field :user_id, value: "#{current_user.id}", required: false %>
    <% else %>
      <p>
        Would you like to<%= link_to(" keep your responses", new_user_registration_path) %> for future contemplation?
      </p>
    <% end %>
    <br>
    <div id="tz_input"></div>
    <%= f.button :submit, "Submit" %>
  <% end %>
